                <DiscreteObjectKeyFrame KeyTime="00:00:00" Value="{x:Static Visibility.Visible}"/>
            </ObjectAnimationUsingKeyFrames>
            <DoubleAnimation Storyboard.TargetName="mpChallengeCanvas" Storyboard.TargetProperty="Opacity" From="1" To="0" Duration="00:00:0.7"/>
            <DoubleAnimation Storyboard.TargetName="mpPeerCanvas" Storyboard.TargetProperty="Opacity" From="0" To="1" Duration="00:00:0.7" />
        </Storyboard>

        <Storyboard x:Key="RejectBackButtonStoryboard">
            <ObjectAnimationUsingKeyFrames BeginTime="00:00:0.7" Storyboard.TargetName="mpRejectCanvas" Storyboard.TargetProperty="(UIElement.Visibility)">
                <DiscreteObjectKeyFrame KeyTime="00:00:00" Value="{x:Static Visibility.Hidden}"/>
            </ObjectAnimationUsingKeyFrames>
            <BooleanAnimationUsingKeyFrames BeginTime="00:00:00" Storyboard.TargetName="rejectBackButton" Storyboard.TargetProperty="(UIElement.IsEnabled)">
                <DiscreteBooleanKeyFrame KeyTime="00:00:00" Value="False"/>
            </BooleanAnimationUsingKeyFrames>
            <ObjectAnimationUsingKeyFrames BeginTime="00:00:00" Storyboard.TargetName="mpPeerCanvas" Storyboard.TargetProperty="(UIElement.Visibility)">
                <DiscreteObjectKeyFrame KeyTime="00:00:00" Value="{x:Static Visibility.Visible}"/>
            </ObjectAnimationUsingKeyFrames>
            <DoubleAnimation Storyboard.TargetName="mpRejectCanvas" Storyboard.TargetProperty="Opacity" From="1" To="0" Duration="00:00:0.7"/>
            <DoubleAnimation Storyboard.TargetName="mpPeerCanvas" Storyboard.TargetProperty="Opacity" From="0" To="1" Duration="00:00:0.7" />
        </Storyboard>

        <Storyboard x:Key="PeerBackButtonStoryboard">
            <ObjectAnimationUsingKeyFrames BeginTime="00:00:0.7" Storyboard.TargetName="mpPeerCanvas" Storyboard.TargetProperty="(UIElement.Visibility)">
                <DiscreteObjectKeyFrame KeyTime="00:00:00" Value="{x:Static Visibility.Hidden}"/>
            </ObjectAnimationUsingKeyFrames>
            <ObjectAnimationUsingKeyFrames BeginTime="00:00:00" Storyboard.TargetName="mpNicknameCanvas" Storyboard.TargetProperty="(UIElement.Visibility)">
                <DiscreteObjectKeyFrame KeyTime="00:00:00" Value="{x:Static Visibility.Visible}"/>
            </ObjectAnimationUsingKeyFrames>
            <DoubleAnimation Storyboard.TargetName="mpPeerCanvas" Storyboard.TargetProperty="Opacity" From="1" To="0" Duration="00:00:0.7"/>
            <DoubleAnimation Storyboard.TargetName="mpNicknameCanvas" Storyboard.TargetProperty="Opacity" From="0" To="1" Duration="00:00:0.7" />
        </Storyboard>

        <Storyboard x:Key="LoadMenuButtons">
            <ObjectAnimationUsingKeyFrames BeginTime="00:00:0.7" Storyboard.TargetName="profileGrid" Storyboard.TargetProperty="(UIElement.Visibility)">
                <DiscreteObjectKeyFrame KeyTime="00:00:00" Value="{x:Static Visibility.Hidden}"/>
            </ObjectAnimationUsingKeyFrames>
            <DoubleAnimation Storyboard.TargetName="profileGrid" Storyboard.TargetProperty="Opacity" From="1" To="0" Duration="0:0:0.7"/>
        </Storyboard>

        <Storyboard x:Key="MoveClouds">
            <ThicknessAnimation Storyboard.TargetName="Cloud1" Storyboard.TargetProperty="Margin" From="-1000,-650,0,0" To="-500,-650,0,0" Duration="0:0:40" DecelerationRatio="0.1" AccelerationRatio="0.1" AutoReverse="True" RepeatBehavior="Forever" />
            <ThicknessAnimation Storyboard.TargetName="Cloud2" Storyboard.TargetProperty="Margin" From="-200,-450,0,0" To="300,-450,0,0" Duration="0:0:40" DecelerationRatio="0.1" AccelerationRatio="0.1" AutoReverse="True" RepeatBehavior="Forever" />
            <ThicknessAnimation Storyboard.TargetName="Cloud3" Storyboard.TargetProperty="Margin" From="400,-710,0,0" To="900,-710,0,0" Duration="0:0:40" DecelerationRatio="0.1" AccelerationRatio="0.1" AutoReverse="True" RepeatBehavior="Forever" />
        </Storyboard>
        
        <Storyboard x:Key="InitialLoad">
            <ObjectAnimationUsingKeyFrames BeginTime="00:00:00" Storyboard.TargetName="profileGrid" Storyboard.TargetProperty="(UIElement.Visibility)">
                <DiscreteObjectKeyFrame KeyTime="00:00:00" Value="{x:Static Visibility.Visible}"/>
            </ObjectAnimationUsingKeyFrames>
            <DoubleAnimation Storyboard.TargetName="profileGrid" Storyboard.TargetProperty="Opacity" From="0" To="1" Duration="0:0:0.5" />
        </Storyboard>

        <Storyboard x:Key="menuLoaded">
            <ObjectAnimationUsingKeyFrames BeginTime="00:00:01" Storyboard.TargetName="mainMenuButtons" Storyboard.TargetProperty="(UIElement.Visibility)">
                <DiscreteObjectKeyFrame KeyTime="00:00:00" Value="{x:Static Visibility.Visible}"/>
            </ObjectAnimationUsingKeyFrames>
            <DoubleAnimation Storyboard.TargetName="myMainMenu" Storyboard.TargetProperty="Opacity" From="0" To="1" Duration="0:0:1.5" />
            <DoubleAnimation Storyboard.TargetName="mainMenuButtons" BeginTime="00:00:01" Storyboard.TargetProperty="Opacity" From="0" To="1" Duration="0:0:02" />
        </Storyboard>

        <Storyboard x:Key="loginBorderGlow">
            <DoubleAnimation Storyboard.TargetName="glow" Storyboard.TargetProperty="Opacity" From="0" To="1" Duration="0:0:1.5" RepeatBehavior="Forever" AutoReverse="True" />
        </Storyboard>

        <Storyboard x:Key="qgFadeout">
            <DoubleAnimation Storyboard.TargetName="contentGrid" Storyboard.TargetProperty="Opacity" From="1" To="0" Duration="0:0:1.5" />
            <DoubleAnimation Storyboard.TargetName="MainMenuTheme" Storyboard.TargetProperty="Volume" From="0.3" To="0.0" Duration="0:0:1.5" />
        </Storyboard>

        <Storyboard x:Key="fadeVolumeDown" >
            <DoubleAnimation Storyboard.TargetName="MainMenuTheme" Storyboard.TargetProperty="Volume" From="0.5" To="0.2" Duration="0:0:1.5" />
        </Storyboard>

        <Storyboard x:Key="fadeVolumeUp" >
            <DoubleAnimation Storyboard.TargetName="MainMenuTheme" Storyboard.TargetProperty="Volume" From="0.2" To="0.5" Duration="0:0:1.5" />
        </Storyboard>
                
        <Storyboard x:Key="fadeVolumeOff" >
            <DoubleAnimation Storyboard.TargetName="MainMenuTheme" Storyboard.TargetProperty="Volume" From="0.3" To="0.0" Duration="0:0:1.5" />
        </Storyboard>

        <Storyboard x:Key="ExitStoryboard" Completed="Storyboard_Completed_2">
            <DoubleAnimation Storyboard.TargetName="MainMenuTheme" Storyboard.TargetProperty="Volume" From=".5" To=".0" Duration="0:0:1.5" />
            <DoubleAnimation Storyboard.TargetName="myMainMenu" Storyboard.TargetProperty="Opacity" From="1" To="0" Duration="0:0:1.5" />
        </Storyboard>

    </Window.Resources>

    <Window.Triggers>

        <EventTrigger RoutedEvent="FrameworkElement.Loaded">
            <!--<BeginStoryboard Storyboard="{StaticResource InitialLoad}"/>
            <BeginStoryboard Storyboard="{StaticResource MoveTrain}"/>
            <BeginStoryboard Storyboard="{StaticResource MoveClouds}"/>-->
            <BeginStoryboard Storyboard="{StaticResource menuLoaded}" />
        </EventTrigger>

    </Window.Triggers>
</Window>
