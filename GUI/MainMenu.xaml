<Window x:Class="Locomotion.MainMenu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:Engine="clr-namespace:PlayGround.Engine.Controls;assembly=SandBox"
        xmlns:Emitter="clr-namespace:PlayGround.Engine.Emitters;assembly=SandBox"
        Name="myMainMenu" Height="900" Width="1440" WindowStyle="None" ResizeMode="NoResize"  WindowStartupLocation="CenterScreen" WindowState="Maximized" Closing="myMainMenu_Closing" Background="Black" BorderBrush="#FF8E0000">
        <Grid Name="contentGrid" >
        <Grid.Background>
            <ImageBrush ImageSource="/Locomotion;component/Media/Graphics/staticBackground.png" />
        </Grid.Background>
        <Grid.Resources>

            <Style x:Key="canvasStyle" TargetType="{x:Type Canvas}">
                <Setter Property="Height" Value="320" />
                <Setter Property="Width" Value="200" />
                <Setter Property="VerticalAlignment" Value="Center" />
                <Setter Property="HorizontalAlignment" Value="Center" />
               <!-- <Setter Property="Background" Value="#AAFFFFFF" /> -->
                
            </Style>

        </Grid.Resources>

        


        <!--Play theme song FOREVER!-->
        <MediaElement Name="MainMenuTheme" >
            <MediaElement.Triggers>
                <EventTrigger RoutedEvent="MediaElement.Loaded">
                    <EventTrigger.Actions>
                        <BeginStoryboard>
                            <Storyboard>
                                <MediaTimeline Source="Media/Sounds/MainMenuTheme.wav"  Storyboard.TargetName="MainMenuTheme" RepeatBehavior="Forever" />
                            </Storyboard>
                        </BeginStoryboard>
                    </EventTrigger.Actions>
                </EventTrigger>
            </MediaElement.Triggers>
        </MediaElement>
        
        
        <Canvas Height="900" HorizontalAlignment="Center" Name="mmtCanvas" VerticalAlignment="Center" Width="1440">
            <!--<Image Height="500" HorizontalAlignment="Center" Margin="-3100,230,0,0" Name="MainMenuTrain" VerticalAlignment="Center" Width="4000" Source="/Locomotion;component/Media/Graphics/MainMenuTrain.png" />
            <Image Height="450" HorizontalAlignment="Center" Margin="566,390,0,0" Name="boardImage" Stretch="Fill" VerticalAlignment="Center" Width="300" Source="/Locomotion;component/Media/Graphics/Board.png" />-->

            <Image Name="landscape"  Height="900" Width="5600" Margin="1440,0,0,0" Source="/Locomotion;component/Media/Graphics/Landscape.png" />
            <Image Name="midground" Height="256" Width="11201" Margin="1440,530,0,0" Source="/Locomotion;component/Media/Graphics/backLayer.png" />
            <Engine:ParticleSystem Width="1" Height="1" Background="Transparent" 
                           x:Name="SmokeParticleSystem" Grid.Column="0" Margin="1350,700,0,0">
                <Engine:ParticleSystem.Emitters>
                    <Emitter:LineEmitter  X1="5" Y1="0" X2="35" Y2="0" MaxParticles="70" 
                             MinHorizontalVelocity="-10.0" MaxHorizontalVelocity="10.0"
                             MinVerticalVelocity="-14.0" MaxVerticalVelocity="5.0"
                             StartOpacity="0.4" EndOpacity="0.0" 
                             MinLifeSpan="3" MaxLifeSpan="6" MaxParticleHeight="25" MaxParticleWidth="25" MinParticleHeight="18" MinParticleWidth="18">
                        <Emitter:LineEmitter.ColorKeyFrames>
                            <ColorKeyFrameCollection>
                                <LinearColorKeyFrame Value="AntiqueWhite" KeyTime="0%" />
                                <LinearColorKeyFrame Value="LightGray" KeyTime="30%" />
                                <LinearColorKeyFrame Value="Gray" KeyTime="60%" />
                            </ColorKeyFrameCollection>
                        </Emitter:LineEmitter.ColorKeyFrames>
                    </Emitter:LineEmitter>
                </Engine:ParticleSystem.Emitters>
                <Engine:ParticleSystem.Gravity>
                    <Vector X="-50" Y="-5" />
                </Engine:ParticleSystem.Gravity>
                <Engine:ParticleSystem.Drag>
                    <Vector X="5" Y="0.5" />
                </Engine:ParticleSystem.Drag>
            </Engine:ParticleSystem>
            
            <Image Name="MainMenuTrain" Height="270" Width="1450" Margin="-15,620,0,0" Source="/Locomotion;component/Media/Graphics/MainMenuTrain.png" />
            <Image Name="FrontLayer" Height="384" Width="18240" Margin="0,532,0,0" Source="/Locomotion;component/Media/Graphics/frontLayer.png" Stretch="Fill"/>
            
            <Canvas.Resources>
                
            </Canvas.Resources>
        </Canvas>

