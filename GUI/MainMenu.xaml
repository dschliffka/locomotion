        <Grid.Triggers>

            <EventTrigger SourceName="NewGameButton" RoutedEvent="Button.Click">
                <EventTrigger.Actions>
                    <BeginStoryboard>
                        <Storyboard x:Name="NewGameStoryBoard">
                            <BooleanAnimationUsingKeyFrames BeginTime="00:00:0.7" Storyboard.TargetName="newGameButtons" Storyboard.TargetProperty="(UIElement.IsEnabled)">
                                <DiscreteBooleanKeyFrame KeyTime="00:00:00" Value="True"/>
                            </BooleanAnimationUsingKeyFrames>
                            <BooleanAnimationUsingKeyFrames BeginTime="00:00:00" Storyboard.TargetName="mainMenuButtons" Storyboard.TargetProperty="(UIElement.IsEnabled)">
                                <DiscreteBooleanKeyFrame KeyTime="00:00:00" Value="False"/>
