       Title="GameWindow" Name="gameWindow" WindowStyle="None" ResizeMode="NoResize"  WindowStartupLocation="CenterScreen" WindowState="Maximized" Closing="Window_Closing" Height="900" Width="1440" OpacityMask="Black" KeyDown="gameWindow_KeyDown" Background="{x:Null}">

    <Grid Name="contentGrid" Opacity="1" MouseDown="contentGrid_MouseDown">
        
