        </Canvas>

            <Engine:ParticleSystem Width="1" Height="1" Background="Transparent" 
                               x:Name="SnowParticleSystem" Grid.Column="0" Margin="-1430,-1000,0,0">
                <Engine:ParticleSystem.Emitters>
                    <Emitter:LineEmitter Name="SnowParticles"  X1="5" Y1="0" X2="2900" Y2="0" MaxParticles="300" 
                                 MinHorizontalVelocity="-10.0" MaxHorizontalVelocity="10.0"
                                 MinVerticalVelocity="-14.0" MaxVerticalVelocity="5.0"
                                 StartOpacity="0.9" EndOpacity="0" 
                                 MinLifeSpan="9" MaxLifeSpan="26" MaxParticleHeight="15" MaxParticleWidth="15" MinParticleHeight="10" MinParticleWidth="10">
                        <Emitter:LineEmitter.ColorKeyFrames>
                            <ColorKeyFrameCollection>
                                <LinearColorKeyFrame Value="White" KeyTime="0%" />
                                <LinearColorKeyFrame Value="GhostWhite" KeyTime="70%" />
                            </ColorKeyFrameCollection>
                        </Emitter:LineEmitter.ColorKeyFrames>
                    </Emitter:LineEmitter>
                </Engine:ParticleSystem.Emitters>
                <Engine:ParticleSystem.Gravity>
                    <Vector X="0" Y="12" />
                </Engine:ParticleSystem.Gravity>
                <Engine:ParticleSystem.Drag>
                    <Vector X="5" Y="0.5" />
                </Engine:ParticleSystem.Drag>
            </Engine:ParticleSystem>

            <Engine:ParticleSystem Width="1" Height="1" Margin="-4200,-1500,0,0" Background="Transparent" 
                               x:Name="SandParticleSystem" Grid.Column="0">
                <Engine:ParticleSystem.Emitters>
                    <Emitter:LineEmitter  X1="0" Y1="0" X2="3200" Y2="0" MaxParticles="150" 
